.container
  %ul
    - @post.errors.full_messages.each do |message|
      %li= message
  = form_with(model: post, local: true) do |form|
    = hidden_field :user_id, value: current_user.id 
    = form.label :image
    = form.file_field :image

    = form.label :content
    = form.text_field :content

    = form.submit "投稿する"